<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#cdcd00">

    <ImageView
        android:id="@+id/appliance_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#000000"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/increment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/appliance_image"/>

    <TextView
            android:id="@+id/decrement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/appliance_image"/>

    <EditText
        android:id="@+id/appliance_count"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="0"
        android:inputType="number"
        android:layout_below="@id/appliance_image"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>