<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CurrentJobActivity" >

    <TextView
        android:id="@+id/current_job_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer" 
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/current_job_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/current_job_customer"
        android:layout_below="@+id/current_job_customer"
        android:text="Address"
        android:textAppearance="?android:attr/textAppearanceMedium"  />

    <TextView
        android:id="@+id/current_job_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/current_job_address"
        android:layout_below="@+id/current_job_address"
        android:text="Progress"
        android:textAppearance="?android:attr/textAppearanceMedium"  />

    <GridView
        android:id="@+id/curent_job_gridView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/current_job_removeApplianceButton"
        android:layout_alignRight="@+id/current_job_removeApplianceButton"
        android:numColumns="3" >
    </GridView>

    <ProgressBar
        android:id="@+id/current_job_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/current_job_viewpartButton"
        android:layout_below="@+id/current_job_address" />

    <Button
        android:id="@+id/current_job_viewpartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_job_progress"
        android:layout_centerHorizontal="true"
        android:text="View Part" />

    <Button
        android:id="@+id/current_job_addApplianceButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/curent_job_gridView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:text="Add Appliance" />

    <Button
        android:id="@+id/current_job_removeApplianceButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/current_job_addApplianceButton"
        android:layout_alignBottom="@+id/current_job_addApplianceButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="Remove Appliance" />

</RelativeLayout>